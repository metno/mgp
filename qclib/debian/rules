#!/usr/bin/make -f

%:
	dh $@

override_dh_install:
	cd $(CURDIR)/qclib && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/qclib install
	cd $(CURDIR)/qccserver && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/qccserver install
	cd $(CURDIR)/qclserver && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/qclserver install
	mkdir -p $(CURDIR)/debian/qclib-dev/usr/include
	cp $(CURDIR)/qclib/qc*.h $(CURDIR)/debian/qclib-dev/usr/include
	cd $(CURDIR)/qcopenchatwin && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/qcopenchatwin install
	mkdir -p $(CURDIR)/debian/qcopenchatwin/usr/share/pixmaps
	cp $(CURDIR)/icons/*.png $(CURDIR)/debian/qcopenchatwin/usr/share/pixmaps
	mkdir -p $(CURDIR)/debian/qcopenchatwin/usr/share/applications
	cp $(CURDIR)/desktop/*.desktop $(CURDIR)/debian/qcopenchatwin/usr/share/applications
